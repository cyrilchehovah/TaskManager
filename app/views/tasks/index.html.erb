<h3> <%= link_to "add a new task", new_task_path %> </h3>

<%= @tasks.each do |task| %>
<h2> <%= task.title %> </h2>
<h3> <%= task.checked %> </h3>
<p> <%= task.created_at.strftime("%b %d, %Y") %> </p>
<%= link_to "view task", task_path(task) %>
<%= link_to "edit task", edit_task_path(task) %>
<%= link_to "delete task", task_path(task), method: :delete %>
<% end %>

